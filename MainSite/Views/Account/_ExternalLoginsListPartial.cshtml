@model ICollection<AuthenticationClientData>

@if (Model.Count > 0)
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken();

        foreach (AuthenticationClientData p in Model)
        {        
            <button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account" 
                                                style="background-color: transparent; color: transparent; border-color: transparent;">
                <img src="@p.ExtraData["Icon"]" style="width:64px; height: auto;"/>
            </button>
        }
    }
}
